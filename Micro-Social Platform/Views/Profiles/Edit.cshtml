@model  Micro_Social_Platform.Models.Profile

<div class="jumbotron">
    <h2>Edit Profile</h2>
    @using (Html.BeginForm("Edit", "Profiles"))
    {

        @Html.HttpMethodOverride(HttpVerbs.Put)
        <br />
        @Html.HiddenFor(m => m.ProfileId)
        @Html.HiddenFor(m => m.UserId)

        @Html.Label("Name", "Profile Name")
        <br />
        @Html.EditorFor(m => m.Name, new { htmlAtributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
        <br /><br />
        @Html.Label("Description", "Profile Description")
        <br />
        @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
        <br /><br />

        @Html.Label("IsPublic", "Privacy Profile")
        <br />
        @Html.RadioButton("IsPublic", true, true, new { id = "public", @checked = "true" })
        @Html.Label("public", "Public")
        <span>&nbsp</span>
        @Html.RadioButton("IsPublic", false, new { id = "private" })
        @Html.Label("private", "Private")
        <br />


        <button class="btn btn-sm button" type="submit">Edit profile</button>

    }
</div>

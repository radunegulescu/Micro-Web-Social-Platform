@model Micro_Social_Platform.Models.Group
@{
    ViewBag.Title = "Edit Group";
}
<div class="jumbotron">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm(actionName: "Edit", controllerName: "Groups"))
    {

        @Html.HttpMethodOverride(HttpVerbs.Put)
        <br />
        @Html.Hidden("GroupId")

        @Html.Label("Name", "Group Name")
        <br />
        @Html.Editor("Name", new { htmlAtributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
        <br /><br />
        @Html.Label("Description", "Group Description")
        <br />
        @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
        <br /><br />

        @Html.Hidden("Date")
        <br />
        <button class="btn btn-sm button" type="submit">Edit Group</button>
    }
</div>
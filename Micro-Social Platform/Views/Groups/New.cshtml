@model Micro_Social_Platform.Models.Group

@{
    ViewBag.Title = "Add Group";
}

<div class="jumbotron">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm(actionName: "New", controllerName: "Groups"))
    {
        @Html.Label("Name", "Group Name")
        <br />
        @Html.TextBox("Name", null, new { @class = "form-control" })
        @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
        <br /><br />

        @Html.Label("Description", "Group Description")
        <br />
        @Html.TextBox("Description", null, new { @class = "form-control" })
        @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
        <br /><br />

        <button class="btn button" type="submit">Add Group</button>
    }
</div>

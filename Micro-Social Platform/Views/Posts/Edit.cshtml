@model  Micro_Social_Platform.Models.Post

<div class="jumbotron">
    <h2>Edit post</h2>

    @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts"))
    {

        @Html.HttpMethodOverride(HttpVerbs.Put)
        <br />
        @Html.HiddenFor(m => m.PostId)

        @Html.Label("Title", "Post title")
        <br />
        @Html.EditorFor(m => m.Title, new { htmlAtributes = new { @class = "form-control" } })
        @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
        <br /><br />
        @Html.Label("Content", "Post content")
        <br />
        @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control summernote" } })
        @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
        <br /><br />
        @Html.HiddenFor(m => m.Date)

        <button class="btn btn-sm button" type="submit">Edit post</button>

    }
</div>